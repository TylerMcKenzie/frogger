#version 100

uniform mat3 N;
uniform mat4 WVP;

attribute vec4 pos;
varying vec3 wnormal;
attribute vec2 nor;
attribute vec3 ipos;

void main()
{
    vec4 spos = vec4(pos.xyz, 1.0);
    wnormal = normalize(N * vec3(nor, pos.w));
    vec3 _45 = spos.xyz + ipos;
    spos = vec4(_45.x, _45.y, _45.z, spos.w);
    gl_Position = WVP * spos;
}

